# Database Configuration
DB_USER=chimera_user
DB_PASSWORD=your_secure_password_here
DB_HOST=localhost
DB_PORT=5432
DB_NAME=chimera

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# RPC Endpoints (Base L2)
RPC_PRIMARY_HTTP=https://base-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
RPC_PRIMARY_WS=wss://base-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
RPC_BACKUP_HTTP=https://base-mainnet.quiknode.pro/YOUR_QUICKNODE_KEY
RPC_BACKUP_WS=wss://base-mainnet.quiknode.pro/YOUR_QUICKNODE_KEY
RPC_ARCHIVE_HTTP=https://base-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# Operator Configuration
OPERATOR_ADDRESS=0x0000000000000000000000000000000000000000
# Note: Private key stored in AWS Secrets Manager, not in environment variables

# Smart Contract Addresses
CHIMERA_CONTRACT=0x0000000000000000000000000000000000000000

# AWS Configuration (for Secrets Manager and CloudWatch)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_SECRETS_MANAGER_KEY_NAME=chimera/operator-key

# Monitoring and Alerting
ALERT_EMAIL=alerts@example.com
ALERT_PHONE=+1234567890
ALERT_SMS=+1234567890
CLOUDWATCH_ENABLED=false

# Optional: Override safety limits (use with caution)
# MAX_SINGLE_EXECUTION_USD=500
# MAX_DAILY_VOLUME_USD=2500
# MIN_PROFIT_USD=50
